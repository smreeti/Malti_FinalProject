<!DOCTYPE html>
<html lang="en">

<!-- HTML Header-->
<%- include('layouts/header') -%>

    <body>
        <!-- Navigation -->
        <%- include('layouts/navbar') -%>
        
            <!-- Page Header-->
            <header class="masthead" id ="dashboardBanner">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="site-heading">
                                <h1>Malti Book Store</h1>
                                <span class="subheading">Welcome to Dashboard Page</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <main>
                <% if(data.stock !=null && data.stock.length > 0) { %>
                    <h1 class="title">Avaiable Book Stock</h1>
                    <div class="books">
                        <% for(let i=0; i< data.stock.length; i ++){ %>
                            <div class="book-item">
                                <img src="/images/stock.jpg" alt="Avatar" style="width:100%;height: 200px;">
                                <div class="info">
                                    <h4><b><%= data.stock[i].bookName %></b></h4> 
                                    <p class="book-item-author"><%= data.stock[i].authorName %>
                                    <div class="book-item-footer">
                                        <span class="book-item-category"><%= data.stock[i].categoryName %></span>
                                        <span class="book-item-quantity">Qty: <%= data.stock[i].quantity %></span>
                                    </div>
                                </div>
                            </div>
                        <%} %>
                    </div>
                <%}else{ %>
                    <p class="text-center"> No books in stock yet!</p>
                <%} %>

                <% if(data.bookInfo !=null && data.bookInfo.length > 0) { %>
                    <h1 class="title">Book List</h1>
                    <div class="books">
                        <% for(let i=0; i< data.bookInfo.length; i ++){ %>
                            <div class="book-item">
                                <img src="/images/books.jpg" alt="Avatar" style="width:100%;height: 200px;">
                                <div class="info">
                                    <h4><b><%= data.bookInfo[i].bookName %></b></h4> 
                                    <p class="book-item-author"><%= data.bookInfo[i].authorName %>
                                    <div class="book-item-footer">
                                        <span class="book-item-category"><%= data.bookInfo[i].categoryName %></span>
                                        <span  class="book-item-price">$ <%= data.bookInfo[i].price %></span>
                                    </div>
                                </div>
                            </div>
                        <%} %>
                    </div>
                <%}else{ %>
                    <p class="text-center"> No book yet!</p>
                <%} %>
                <p class="reports"><a href="/fetchBookList">Download Book List</a></p>
            </main>
            <!--Footer-->
            <%- include('layouts/footer') -%>
    </body>

</html>